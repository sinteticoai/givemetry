# ==============================================
# GiveMetry Environment Variables
# Copy this file to .env.local and fill in values
# ==============================================

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://givemetry:PASSWORD@localhost:5432/givemetry_dev

# Authentication (NextAuth v5)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-secret-min-32-chars-here

# AI Services
ANTHROPIC_API_KEY=sk-ant-xxx   # Get from console.anthropic.com
OPENAI_API_KEY=sk-xxx          # Get from platform.openai.com

# Email (Resend)
RESEND_API_KEY=re_test_xxx     # Get from resend.com
RESEND_FROM_EMAIL=dev@givemetry.com

# File Storage
STORAGE_TYPE=local             # Options: local, s3
# S3/R2 settings (if STORAGE_TYPE=s3)
# S3_BUCKET=givemetry-dev
# S3_REGION=auto
# S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx

# Development Options
AI_MOCK_MODE=false             # Set to true to use mock AI responses
AI_DEBUG=false                 # Set to true to log AI prompts/responses
DATABASE_LOG=false             # Set to true to log all database queries

# Super Admin Authentication (separate from tenant auth)
ADMIN_AUTH_SECRET=generate-a-separate-32-char-secret
ADMIN_AUTH_URL=http://localhost:3000/admin
INITIAL_ADMIN_EMAIL=admin@givemetry.com
INITIAL_ADMIN_PASSWORD=change-this-secure-password

# Application
NODE_ENV=development
